---
import type { Photo } from '@/lib/dummy-data';

interface Props {
  photo: Photo;
}

const { photo } = Astro.props;
---

<div class="photo-metadata">
  <h3 class="photo-metadata__title">Image Details</h3>
  
  <dl class="photo-metadata__list">
    {photo.camera && (
      <>
        <dt>Camera</dt>
        <dd>{photo.camera}</dd>
      </>
    )}
    
    {photo.lens && (
      <>
        <dt>Lens</dt>
        <dd>{photo.lens}</dd>
      </>
    )}
    
    {photo.aperture && (
      <>
        <dt>Aperture</dt>
        <dd>{photo.aperture}</dd>
      </>
    )}
    
    {photo.shutterSpeed && (
      <>
        <dt>Shutter Speed</dt>
        <dd>{photo.shutterSpeed}</dd>
      </>
    )}
    
    {photo.iso && (
      <>
        <dt>ISO</dt>
        <dd>{photo.iso}</dd>
      </>
    )}
    
    {photo.location && (
      <>
        <dt>Location</dt>
        <dd>{photo.location}</dd>
      </>
    )}
    
    {photo.dateTaken && (
      <>
        <dt>Date</dt>
        <dd>{new Date(photo.dateTaken).toLocaleDateString('en-AU', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric' 
        })}</dd>
      </>
    )}
  </dl>
  
  {photo.tags && photo.tags.length > 0 && (
    <div class="photo-metadata__tags">
      <h4>Tags</h4>
      <div class="photo-metadata__tag-list">
        {photo.tags.map(tag => (
          <a href={`/gallery?tag=${tag}`} class="photo-metadata__tag">{tag}</a>
        ))}
      </div>
    </div>
  )}
</div>

<style>
  .photo-metadata {
    background: #f8f8f8;
    padding: 2rem;
    border-radius: 8px;
  }
  
  :global(.dark) .photo-metadata {
    background: #151515;
  }
  
  .photo-metadata__title {
    font-size: 0.75rem;
    font-family: 'Inter', sans-serif;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #888;
    margin: 0 0 1.5rem;
  }
  
  .photo-metadata__list {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.75rem 1.5rem;
    margin: 0;
  }
  
  .photo-metadata__list dt {
    font-size: 0.8125rem;
    color: #888;
  }
  
  .photo-metadata__list dd {
    font-size: 0.9375rem;
    margin: 0;
  }
  
  .photo-metadata__tags {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }
  
  :global(.dark) .photo-metadata__tags {
    border-top-color: rgba(255, 255, 255, 0.1);
  }
  
  .photo-metadata__tags h4 {
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #888;
    margin: 0 0 1rem;
  }
  
  .photo-metadata__tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .photo-metadata__tag {
    font-size: 0.8125rem;
    padding: 0.375rem 0.75rem;
    background: #fff;
    border-radius: 100px;
    color: #666;
    transition: all 0.2s;
  }
  
  :global(.dark) .photo-metadata__tag {
    background: #222;
    color: #ccc;
  }
  
  .photo-metadata__tag:hover {
    background: #1a1a1a;
    color: #fff;
  }
  
  :global(.dark) .photo-metadata__tag:hover {
    background: #fff;
    color: #0a0a0a;
  }
</style>
