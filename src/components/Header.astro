---
import { dummySiteSettings } from '@/lib/dummy-data';

const settings = dummySiteSettings;
---

<header class="header">
  <div class="container">
    <div class="header__inner">
      <a href="/" class="header__logo">
        {settings.siteName}
      </a>
      
      <nav class="header__nav">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/gallery">Gallery</a></li>
          <li><a href="/albums">Albums</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </nav>
      
      <div class="header__actions">
        <a href="/client-area" class="header__client-link">Client Area</a>
        
        <button class="header__menu-toggle" aria-label="Toggle menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Nav -->
  <div class="mobile-nav">
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/gallery">Gallery</a></li>
        <li><a href="/albums">Albums</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/contact">Contact</a></li>
        <li><a href="/client-area">Client Area</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(250, 250, 250, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }
  
  :global(.dark) .header {
    background: rgba(10, 10, 10, 0.95);
    border-bottom-color: rgba(255, 255, 255, 0.05);
  }
  
  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
  }
  
  .header__logo {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 1.5rem;
    font-weight: 500;
    letter-spacing: 0.05em;
  }
  
  .header__nav ul {
    display: flex;
    gap: 2.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .header__nav a {
    font-size: 0.8125rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #666;
    transition: color 0.2s;
  }
  
  .header__nav a:hover {
    color: #1a1a1a;
  }
  
  :global(.dark) .header__nav a {
    color: #999;
  }
  
  :global(.dark) .header__nav a:hover {
    color: #fff;
  }
  
  .header__actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }
  
  .header__client-link {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    padding: 0.625rem 1.25rem;
    border: 1px solid #1a1a1a;
    transition: all 0.2s;
  }
  
  .header__client-link:hover {
    background: #1a1a1a;
    color: #fff;
  }
  
  :global(.dark) .header__client-link {
    border-color: #fff;
    color: #fff;
  }
  
  :global(.dark) .header__client-link:hover {
    background: #fff;
    color: #0a0a0a;
  }
  
  .header__menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
  }
  
  .header__menu-toggle span {
    display: block;
    width: 24px;
    height: 2px;
    background: #1a1a1a;
    transition: all 0.3s;
  }
  
  :global(.dark) .header__menu-toggle span {
    background: #fff;
  }
  
  .mobile-nav {
    display: none;
    position: fixed;
    top: 80px;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fafafa;
    padding: 2rem;
  }
  
  :global(.dark) .mobile-nav {
    background: #0a0a0a;
  }
  
  .mobile-nav.active {
    display: block;
  }
  
  .mobile-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .mobile-nav a {
    display: block;
    font-size: 1.5rem;
    font-family: 'Cormorant Garamond', Georgia, serif;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }
  
  :global(.dark) .mobile-nav a {
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
  
  @media (max-width: 900px) {
    .header__nav {
      display: none;
    }
    
    .header__client-link {
      display: none;
    }
    
    .header__menu-toggle {
      display: flex;
    }
  }
</style>

<script>
  const menuToggle = document.querySelector('.header__menu-toggle');
  const mobileNav = document.querySelector('.mobile-nav');
  
  menuToggle?.addEventListener('click', () => {
    mobileNav?.classList.toggle('active');
  });
</script>
